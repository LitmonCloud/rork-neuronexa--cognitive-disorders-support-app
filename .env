# Example formats:
# EXPO_PUBLIC_RC_IOS_API_KEY=appl_xxxxxxxxxxxxxxxxxxxxxxxx
# EXPO_PUBLIC_RC_ANDROID_API_KEY=goog_xxxxxxxxxxxxxxxxxxxxxxxx
EXPO_PUBLIC_RC_IOS_API_KEY=test_UuEBbaCMjdjrwVUWDdquJcjAmkw
EXPO_PUBLIC_RC_ANDROID_API_KEY=test_UuEBbaCMjdjrwVUWDdquJcjAmkw

